<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="30dp"
    tools:context="com.sietecerouno.atlantetransportador.sections.CommentsActivity">

    <TextView
        android:id="@+id/copy"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:text="Cuéntanos los aciertos y desacierto de Atlant.e desde tu experiencia, denuncia cualquier situación de la cual estas inconforme."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/btn_next"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_blue"
        android:textColor="@android:color/white"/>

    <EditText
        android:padding="10dp"
        android:gravity="top"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_edittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintTop_toBottomOf="@id/copy"
        android:id="@+id/myText"
         />

</android.support.constraint.ConstraintLayout>
