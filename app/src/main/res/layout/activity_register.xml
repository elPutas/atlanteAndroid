<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sietecerouno.atlantetransportador.sections.RegisterActivity">
<ImageView
    android:id="@+id/bg"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@android:color/white"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <EditText
        android:id="@+id/mail_txt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/bg_edittext"
        android:hint="Correo:"
        android:inputType="textEmailSubject"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <EditText
        android:id="@+id/name_txt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:hint="Nombres:"
        android:inputType="text|textCapWords"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_txt" />

    <EditText
        android:id="@+id/lastname_txt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:hint="Apellido:"
        android:inputType="text|textCapWords"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_txt" />

    <EditText
        android:id="@+id/cell_txt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:hint="Celular:"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastname_txt" />

    <EditText
        android:textColor="@android:color/black"
        android:id="@+id/pass_txt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:hint="Contraseña:"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cell_txt" />

    <EditText
        android:id="@+id/confirm_pass_txt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:hint="Confirmar contraseña:"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_txt" />

    <TextView

        android:id="@+id/city_txt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:hint="Ciudad:"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_pass_txt" />





    <TextView
        android:layout_marginBottom="70dp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/readTyC"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/black"
        android:text="He leído y acepto las políticas de privacidad"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_width="200dp"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/back"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/readTyC"
        android:text="Iniciar sesión ahora"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="200dp"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_button_blue"
        android:id="@+id/register_btn"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/readTyC"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/white"
        android:text="REGISTRATE"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/acceptTyC"
        style="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginRight="8dp"
        android:buttonTint="@color/blueApp"
        app:layout_constraintRight_toLeftOf="@+id/readTyC"
        app:layout_constraintTop_toTopOf="@id/readTyC" />

</android.support.constraint.ConstraintLayout>
