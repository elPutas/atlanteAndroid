<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    style="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context="com.sietecerouno.atlantetransportador.sections.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitStart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:src="@drawable/logo" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07"
        tools:layout_editor_absoluteY="36dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@id/mail_txt"
        app:layout_constraintTop_toTopOf="@id/mail_txt"
        android:src="@drawable/ico_mail"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <ImageView
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/pass_txt"
        app:layout_constraintTop_toTopOf="@id/pass_txt"
        android:src="@drawable/ico_pass"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/mail_txt"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/pass_txt"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_txt" />

    <TextView
        android:id="@+id/forget_btn"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_txt"
        android:textColor="@android:color/white"
        android:text="Olvidaste tu contraseña?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="0dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/login_btn"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forget_btn"
        android:textColor="@android:color/white"
        android:text="ENTRAR"
        android:background="@drawable/bg_button_blue"
        app:layout_constraintStart_toStartOf="@id/pass_txt"
        app:layout_constraintEnd_toEndOf="@id/pass_txt"
        android:textAlignment="center"
        android:layout_height="wrap_content"
         />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/not_account_txt"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        android:textColor="@android:color/white"
        android:text="Aún no tienes una cuenta?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/pass_txt"
        app:layout_constraintEnd_toEndOf="@id/pass_txt"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_button_green"
        android:id="@+id/register_btn"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/not_account_txt"
        android:textColor="@android:color/white"
        android:text="REGISTRATE"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_btn"
        android:textSize="10sp"
        android:textColor="@android:color/white"
        android:text="v 1.9.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>
