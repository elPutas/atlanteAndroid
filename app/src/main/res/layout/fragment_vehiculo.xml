<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sietecerouno.atlantetransportador.profile.VehiculoFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp">


            <FrameLayout
                android:background="@drawable/bg_circle_gray"
                android:id="@+id/v1"
                android:layout_width="@dimen/circleChooseVehicle"
                android:layout_height="@dimen/circleChooseVehicle">

                <ImageButton
                    android:clickable="false"
                    android:background="@android:color/darker_gray"
                    android:layout_margin="@dimen/centerButtonGreen"
                    android:scaleType="centerCrop"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/btn_add"/>
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/v1"
                app:layout_constraintLeft_toLeftOf="@id/v1"
                app:layout_constraintRight_toRightOf="@id/v1"
                android:layout_marginTop="5dp"
                android:text="VEHÍCULO 1"
                android:textColor="@color/blueApp" />

            <FrameLayout
                android:id="@+id/v2"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@id/v1"
                android:background="@drawable/bg_circle_gray"
                android:layout_width="@dimen/circleChooseVehicle"
                android:layout_height="@dimen/circleChooseVehicle">
                <ImageButton
                    android:clickable="false"
                    android:background="@android:color/darker_gray"
                    android:layout_margin="@dimen/centerButtonGreen"
                    android:scaleType="centerCrop"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/btn_add"/>
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/v2"
                app:layout_constraintLeft_toLeftOf="@id/v2"
                app:layout_constraintRight_toRightOf="@id/v2"
                android:layout_marginTop="5dp"
                android:text="VEHÍCULO 2"
                android:textColor="@color/blueApp" />


            <FrameLayout
                android:id="@+id/v3"
                app:layout_constraintTop_toBottomOf="@id/v1"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_circle_gray"
                android:layout_width="@dimen/circleChooseVehicle"
                android:layout_height="@dimen/circleChooseVehicle">
                <ImageButton
                    android:clickable="false"
                    android:background="@android:color/darker_gray"
                    android:layout_margin="@dimen/centerButtonGreen"
                    android:scaleType="centerCrop"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/btn_add"/>
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/v3"
                app:layout_constraintLeft_toLeftOf="@id/v3"
                app:layout_constraintRight_toRightOf="@id/v3"
                android:layout_marginTop="5dp"
                android:text="VEHÍCULO 3"
                android:textColor="@color/blueApp" />

            <FrameLayout
                android:id="@+id/v4"
                android:layout_width="@dimen/circleChooseVehicle"
                android:layout_height="@dimen/circleChooseVehicle"
                app:layout_constraintLeft_toLeftOf="@id/v2"
                app:layout_constraintTop_toTopOf="@id/v3"
                android:background="@drawable/bg_circle_gray">
                <ImageButton
                    android:clickable="false"
                    android:background="@android:color/darker_gray"
                    android:layout_margin="@dimen/centerButtonGreen"
                    android:scaleType="centerCrop"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/btn_add"/>
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/v4"
                app:layout_constraintLeft_toLeftOf="@id/v4"
                app:layout_constraintRight_toRightOf="@id/v4"
                android:layout_marginTop="5dp"
                android:text="VEHÍCULO 4"
                android:textColor="@color/blueApp" />


        </android.support.constraint.ConstraintLayout>

        <TextView
            app:layout_constraintBottom_toTopOf="@id/guideline"
            android:textColor="@color/gray"
            android:width="250dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:text="Selecciona el vehículo en el cual quieres prestar el servicio"
            android:id="@+id/name_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/photo"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
